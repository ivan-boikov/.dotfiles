name="protonmail-bridge daemon"
description=""
#command=/usr/bin/protonmail-bridge
command=/home/protonmail/proton-bridge
#command_args="${protonmail-bridge_args}"
command_args="--no-window --noninteractive"
command_user="protonmail:protonmail"
# protonmail-bridge does not daemonize itself
command_background=true
pidfile=/run/protonmail-bridge.pid

depend() {
	need net
	use dns
}
