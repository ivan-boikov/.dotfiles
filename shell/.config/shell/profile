#!/bin/zsh

# ~/.profile: executed by the command interpreter for login shells.
# This file is not read by bash(1), if ~/.bash_profile or ~/.bash_login
# exists.
# see /usr/share/doc/bash/examples/startup-files for examples.
# the files are located in the bash-doc package.

# the default umask is set in /etc/profile; for setting the umask
# for ssh logins, install and configure the libpam-umask package.
#umask 022

# if running bash
if [ -n "$BASH_VERSION" ]; then
    # include .bashrc if it exists
    if [ -f "$HOME/.bashrc" ]; then
	. "$HOME/.bashrc"
    fi
fi

export PATH="$PATH:$(du -L "$HOME/.local/bin" | cut -f2 | paste -sd ':')"
#export PATH="$PATH:$HOME/.local/bin"

export PAGER="less"
export EDITOR="nvim"
export TERMINAL="st"
export BROWSER="firefox"
export READER="zathura"

export XDG_CACHE_HOME="$HOME/.cache"
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_DATA_HOME="$HOME/.local/share"

# cleaning up
export GTK2_RC_FILES="${XDG_CONFIG_HOME:-$HOME/.config}/gtk-2.0/gtkrc-2.0"
export ZDOTDIR="${XDG_CONFIG_HOME:-$HOME/.config}/zsh"
export GNUPGHOME="${XDG_DATA_HOME:-$HOME/.local/share}/gnupg"
export WINEPREFIX="${XDG_DATA_HOME:-$HOME/.local/share}/wineprefixes/default"
export HISTFILE="${XDG_DATA_HOME:-$HOME/.local/share}/history"
export TEXMFHOME=$XDG_DATA_HOME/texmf
export TEXMFVAR=$XDG_CACHE_HOME/texlive/texmf-var
export TEXMFCONFIG=$XDG_CONFIG_HOME/texlive/texmf-config
export _JAVA_OPTIONS=-Djava.util.prefs.userRoot="$XDG_CONFIG_HOME"/java
export KLAYOUT_HOME=$XDG_DATA_HOME/klayout
export ICEAUTHORITY="$XDG_CACHE_HOME"/ICEauthority
export SSB_HOME="$XDG_DATA_HOME"/zoom
export WGETRC="$XDG_CONFIG_HOME/wgetrc"
export PASSWORD_STORE_DIR="${XDG_DATA_HOME:-$HOME/.local/share}/password-store"
export SUDO_ASKPASS="$HOME/.local/bin/pass-askpass"
export JULIA_DEPOT_PATH="$XDG_DATA_HOME/julia:$JULIA_DEPOT_PATH"
# xinit
#export XINITRC="$XDG_CONFIG_HOME/x11/xinitrc"
export XSERVERRC="$XDG_CONFIG_HOME/x11/xserverrc"
# X server
export USERXSESSION="$XDG_CONFIG_HOME/x11/xsession"
export USERXSESSIONRC="$XDG_CONFIG_HOME/x11/xsessionrc"
export ALTUSERXSESSION="$XDG_CONFIG_HOME/x11/Xsession"
export ERRFILE="$XDG_CACHE_HOME/x11/xsession-errors"
# libx11
export XCOMPOSEFILE="$XDG_CONFIG_HOME/x11/xcompose"
export XCOMPOSECACHE="$XDG_CACHE_HOME/x11/xcompose"
# npm
export NPM_CONFIG_USERCONFIG=$XDG_CONFIG_HOME/npm/npmrc

# I don't need history from less
export LESSHISTFILE="-"

# Have QT use gtk2 theme.
export QT_QPA_PLATFORMTHEME="gtk2"

# Mozilla smooth scrolling/touchpad support
export MOZ_USE_XINPUT2="1"

# prevent i3-volume indicator to change color
export COLOR_MUTED="#00b1ff"
export COLOR_MUTED_TO_BASE="#00b1ff"
export COLOR_BASE_TO_NORM="#00b1ff"
export COLOR_NORM_TO_MAX="#00b1ff"
export COLOR_OTHER="#00b1ff"
export COLOR_XOSD_OUTLINE="#00b1ff"

# nnn things
export NNN_BMS='v:~/vid;p:~/pix;d:~/dox;M:/mnt;m:/media'
export NNN_PLUG="t:!st;m:mediainf;d:dragdrop;l:mimelist;p:preview-tabbed;o:organize;r:renamer;c:rsynccp;x:toggleex;u:umounttree;g:getplugs;s:x2sel;f:fzcd;2:dups;P:preview-tui;n:fixname"
export NNN_TRASH=1
export NNN_SSHFS="sshfs -o follow_symlinks"
export NNN_FIFO=/tmp/nnn.fifo

# fixing VapourSynth problem
# TODO change 3.9 to whatever may be later
export PYTHONPATH=/usr/local/lib/python3.9/site-packages

if [ -d "$HOME/platform-tools" ] ; then
    export PATH="$HOME/platform-tools:$PATH"
fi
